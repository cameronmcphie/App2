<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_check_list"
        tools:context=".ChecklistActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/checklistRecyclerView"
            android:layout_marginBottom="16dp" android:scrollbars="none|vertical" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/yourChecklistsLabel"/>
    <TextView
            android:text="@string/your_checklists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yourChecklistsLabel" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>